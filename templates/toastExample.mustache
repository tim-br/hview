<div h-id={{id}} class="bg-white shadow-lg rounded-lg p-6 m-4" target-id="bottomDiv">
  <button h-click="set-float" class="bg-purple-500 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded">Show Toast</button>
  <button h-click="unset-float" class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">Hide Toast</button>
</div>

<div h-id={{counter-id}} target-id={{counter-id}} class="bg-white shadow-lg rounded-lg p-6 m-4">
  <h1 class="text-2xl font-bold mb-4">Counter: <div h-value class="inline-block">{{count}}</div></h1>
  <button h-click="increment" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Increment</button>
  <button h-click="decrement" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded ml-2">Decrement</button>
</div>

<h1 class="text-3xl font-bold mt-8 mb-4">Items</h1>
<ul h-id={{hid}} class="list-disc list-inside bg-gray-50 shadow-md rounded-lg p-4">
  {{#items}}
  <li class="p-2 hover:bg-gray-200 rounded">{{{.}}}</li>
  {{/items}}
</ul>

<div h-id="bottomDiv" class="{{valueClass}}"></div>
